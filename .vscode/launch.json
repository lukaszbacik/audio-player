{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "start",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [ "run", "start" ],
            "cwd": "${workspaceFolder}",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "console": "integratedTerminal",
            "restart": true,
            "internalConsoleOptions": "neverOpen"
        }
    ]
}